{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": [
      "ES6"
    ],
    "outDir": "./dist",
    "rootDir": "./app",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "./test"
  ],
  "paths": {
    "@config/*": [
      "./app/config/*"
    ],
    "@controllers/*": [
      "./app/controllers/*"
    ],
    "@database/*": [
      "./app/database/*"
    ],
    "@middlewares/*": [
      "./app/middlewares/*"
    ],
    "@models/*": [
      "./app/models/*"
    ],
    "@repository/*": [
      "./app/repository/*"
    ],
    "@routes/*": [
      "./app/routes/*"
    ],
    "@services/*": [
      "./app/services/index.ts"
    ],
  }
}